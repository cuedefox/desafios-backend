<section class='p-4 bg-secondary'>
	<h2 class='text-primary'>Vista de Productos</h2>
	{{#if products}}
		<table class='table table-dark'>
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Precio</th>
					<th>Foto</th>
				</tr>
			</thead>
			<tbody>
				{{#each products}}
					<tr class='text-center'>
						<td class='align-middle'>{{this.name}}</td>
						<td class='align-middle'>{{this.price}}</td>
						<td class='align-middle'>
							<img src='{{this.picture}}' alt='{{this.name}}' />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<h2 class='bg-light p-4 text-danger'>No se encontraron productos</h2>
	{{/if}}
	<div class='mt-3'>
		<a href='/products'>
			<button class='btn btn-warning'>Agregar producto</button>
		</a>
	</div>
</section>